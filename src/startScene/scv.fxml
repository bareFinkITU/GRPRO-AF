<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="bp" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="300.0" minWidth="400.0" prefHeight="720.0" prefWidth="1340.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="startScene.startSceneController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="homeButton" mnemonicParsing="false" style="-fx-background-color: TRANSPARENT;" text="Home">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="moviesbutton" mnemonicParsing="false" onAction="#moviesClicked" style="-fx-background-color: TRANSPARENT;" text="Movies">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="showsButton" mnemonicParsing="false" onAction="#showsClicked" style="-fx-background-color: TRANSPARENT;" text="TV-Shows">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Button>
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField fx:id="searchField" onKeyReleased="#searchByTitle" promptText="Search">
                     <HBox.margin>
                        <Insets top="2.0" />
                     </HBox.margin></TextField>
                  <Button fx:id="logOutButton" mnemonicParsing="false" onAction="#logOut" style="-fx-background-color: TRANSPARENT;" text="Log out">
                     <font>
                        <Font size="14.0" />
                     </font></Button>
               </children>
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <ScrollPane prefHeight="720.0" prefWidth="1340.0" style="-fx-fit-to-width: true; -fx-background-color: BLACK;" BorderPane.alignment="CENTER">
         <content>
            <FlowPane fx:id="fp" hgap="10.0" prefHeight="720.0" prefWidth="1340.0" style="-fx-background-color: BLACK;" vgap="10.0">
               <padding>
                  <Insets top="18.0" />
               </padding></FlowPane>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
